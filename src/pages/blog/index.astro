---
// component imports
import MainLayout from "../../layouts/MainLayout.astro";
import PostCard from "../../components/PostCard.astro";

const allPosts = await Astro.glob("./*.md");

---

<MainLayout title="Mein Blog">
	<PostCard 
	frontmatter={allPosts[0].frontmatter} 
	url={allPosts[0].url} 
	tagType="h2"/>
</MainLayout>
